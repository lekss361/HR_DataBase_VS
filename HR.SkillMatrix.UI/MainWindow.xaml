<Window x:Class="HR.SkillMatrix.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HR.SkillMatrix.UI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="SearchEmploy" Content="Поиск сотрудника" HorizontalAlignment="Center" Margin="0,80,0,0" VerticalAlignment="Top" Height="50" Width="120" />
        <Button x:Name="Create" Content="Создать..." HorizontalAlignment="Center" Margin="0,131,0,0" VerticalAlignment="Top" Height="50" Width="120" Click="Create_Click" />
        <Button x:Name="Statistic" Content="Статистика?" HorizontalAlignment="Center" Margin="0,182,0,0" VerticalAlignment="Top" Height="50" Width="120" />
        <Button x:Name="Companies" Content="Компании" HorizontalAlignment="Center" Margin="0,233,0,0" VerticalAlignment="Top" Height="50" Width="120" />
        <Button x:Name="Departments" Content="Отделы" HorizontalAlignment="Center" Margin="0,284,0,0" VerticalAlignment="Top" Height="50" Width="120" />

    </Grid>
</Window>
