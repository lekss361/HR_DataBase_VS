<Page x:Class="HR.SkillMatrix.UI.Pages.AboutCompany"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HR.SkillMatrix.UI.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AboutCompany">

    <Grid Background="White" Height="440">
        <Label Content="О компании" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Top" FontSize="20"/>
        <Button Content="Назад" HorizontalAlignment="Left" Margin="27,39,0,0" VerticalAlignment="Top" Width="75"/>
        <Button Content="Изменить" HorizontalAlignment="Left" Margin="107,39,0,0" VerticalAlignment="Top" Width="75"/>
        <Button Content="Сохранить" HorizontalAlignment="Left" Margin="187,39,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <Button Content="Отменить" HorizontalAlignment="Left" Margin="267,39,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>

        <Label Content="О компании" HorizontalAlignment="Center" Margin="338,77,338,0" VerticalAlignment="Top" FontSize="20"/>
        <Grid HorizontalAlignment="Left" Height="136" Margin="10,131,0,0" VerticalAlignment="Top" Width="780">
            <TextBox HorizontalAlignment="Left" Height="136" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="780"/>
        </Grid>
        <DataGrid x:Name="Divisions" HorizontalAlignment="Left" VerticalAlignment="Top"  Height="158"  Width="780" AutoGenerateColumns="False" Margin="10,272,0,0">
            <DataGrid.Columns>
                <DataGridCheckBoxColumn></DataGridCheckBoxColumn>
                <DataGridTextColumn Binding ="{Binding Path = Name}"  IsReadOnly="True" Header="Название отдела" Width="150" />
                <DataGridTextColumn Binding ="{Binding Path = DirectionName}"  IsReadOnly="True" Header="Направление" Width="150"/>
                <DataGridTextColumn Binding ="{Binding Path = Phone}"  IsReadOnly="True" Header="Телефон" Width="120"/>
                <DataGridTextColumn Binding ="{Binding Path = Email}"  IsReadOnly="True" Header="Почта" Width="120"/>
                <DataGridTextColumn Binding ="{Binding Path = Country}"  IsReadOnly="True" Header="Город" Width="90"/>
                <DataGridTextColumn Binding ="{Binding Path = City}" IsReadOnly="True" Header="Страна" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>
        <Grid HorizontalAlignment="Left" Height="158" Margin="10,272,0,0" VerticalAlignment="Top" Width="780"/>
        <Grid.RowDefinitions></Grid.RowDefinitions>
    </Grid>
</Page>