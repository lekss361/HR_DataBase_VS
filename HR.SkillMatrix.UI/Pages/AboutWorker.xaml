        <Button Content="Назад" HorizontalAlignment="Left" Grid.Column="1"  Margin="0,0,0,0" VerticalAlignment="Center" Width="140" Height="40" Grid.ColumnSpan="5"  Grid.Row="1"/>
        <Button Content="Редактировать" HorizontalAlignment="Left" Margin="150,0,0,0" VerticalAlignment="Center" Width="140" Height="40" Grid.Column="1" Grid.ColumnSpan="5" Grid.Row="1" />
        <Button Content="Сохранить" HorizontalAlignment="Left" Margin="300,0,0,0"  VerticalAlignment="Center" Width="140" Height="40"  Grid.Column="1" Grid.ColumnSpan="5"  Grid.Row="1"/>
        <Button Content="Добавить комментарий" HorizontalAlignment="Left"  Margin="450,0,0,0" VerticalAlignment="Center" Width="140" Grid.Column="1" Height="40" Grid.ColumnSpan="5"  Grid.Row="1"/>
        <Button Content="Сохранить комментарий" HorizontalAlignment="Right"  VerticalAlignment="Bottom" Width="140" Height="40" Grid.Column="3" Grid.Row="18"/>
        <Button Content="Добавить новый навык " HorizontalAlignment="Left" Margin="5,0,0,0" VerticalAlignment="Top" Width="143" Height="40" Grid.Column="4" Grid.Row="4" Grid.RowSpan="2"/>
        <Button Content="Редактировать" HorizontalAlignment="Right" VerticalAlignment="Top" Width="110" Height="40" Grid.Column="3" Grid.Row="18" Margin="0,82,0,0" Grid.RowSpan="2"/>
        <Button Content="Удалить" HorizontalAlignment="Right" Margin="0,101,10,0" VerticalAlignment="Top" Width="110" Height="40" Grid.Column="1" Grid.Row="19" />



