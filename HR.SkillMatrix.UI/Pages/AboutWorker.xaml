        <TextBox x:Name="TextBoxEducation"   Grid.Row="12" Margin="0,0,0,5" Grid.Column="1" FontSize="18" />
        <TextBox x:Name="TextBoxPreviousJob"   Grid.Row="13" Margin="0,0,0,5" Grid.Column="1" FontSize="18" />
        <TextBox x:Name="TextBoxStartDate"   Grid.Row="13" Margin="0,0,0,5" Grid.Column="3" FontSize="18" />
        <TextBox x:Name="TextBoxExpirationDate"   Grid.Row="13" Margin="0,0,0,5" Grid.Column="5" FontSize="18" />
        <TextBox x:Name="TextBoxHobby"   Grid.Row="16" Margin="0,0,0,5" Grid.Column="1" FontSize="18" />



        <DataGrid x:Name="DataGridSkillsAndLevels" AutoGenerateColumns="False" Grid.Row="4" Grid.ColumnSpan="3" Grid.Column="1" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Binding ="{Binding Path = Id}"  IsReadOnly="True" Header="id" Width="100" Visibility="Hidden" />
                <DataGridTextColumn Binding ="{Binding Path = SkillTypeID}"  IsReadOnly="True" Header="SkillTypeID" Width="100" Visibility="Hidden" />
                <DataGridTextColumn Binding ="{Binding Path = SkillName}"  IsReadOnly="True" Header="Название навыка" Width="150" />
                <DataGridTextColumn Binding ="{Binding Path = SkillType}"  IsReadOnly="True" Header="Тип навыка" Width="100" />
                <DataGridTemplateColumn Width="150" Header="Уровень">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <ComboBox>
                                <ComboBoxItem IsSelected="True">
                                    <TextBlock>0</TextBlock>
                                </ComboBoxItem>
                                <ComboBoxItem IsSelected="True">
                                    <TextBlock>1</TextBlock>
                                </ComboBoxItem>
                                <ComboBoxItem IsSelected="True">
                                    <TextBlock>2</TextBlock>
                                </ComboBoxItem>
                                <ComboBoxItem IsSelected="True">
                                    <TextBlock>3</TextBlock>
                                </ComboBoxItem>
                                <ComboBoxItem IsSelected="True">
                                    <TextBlock>4</TextBlock>
                                </ComboBoxItem>
                            </ComboBox>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>



    </Grid>

</Page>
