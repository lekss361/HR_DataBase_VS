        <TextBlock Grid.Row="13" Grid.Column="2" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Дата начала" VerticalAlignment="Top"   Margin="20,0,0,0" Grid.ColumnSpan="2" FontSize="18" />
        <TextBlock Grid.Row="13" Grid.Column="4" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Дата окончания" VerticalAlignment="Top"   Margin="20,0,0,0" Grid.ColumnSpan="2" FontSize="18" />
        <TextBlock Grid.Row="14" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Информация о предыдущей работе" VerticalAlignment="Top"   Margin="20,0,0,0" FontSize="18" Grid.RowSpan="2" Width="158" />
        <TextBlock Grid.Row="16" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Хобби" VerticalAlignment="Top"   Margin="20,0,0,0" Grid.RowSpan="2" FontSize="18" />



        <TextBox HorizontalAlignment="Left" Height="89" TextWrapping="Wrap" VerticalAlignment="Top" Width="500" Margin="10,10,0,0" Grid.Column="1" Grid.Row="18" Grid.ColumnSpan="2" Grid.RowSpan="2"/>
        <!--<DatePicker Grid.Column="2" HorizontalAlignment="Left" Margin="231,27,0,0" Grid.Row="10" VerticalAlignment="Top" Grid.RowSpan="2" Height="24" Width="100"/>-->
        <TextBox x:Name="TextBoxCompany"   Grid.Row="2" Margin="0,0,0,5" Grid.Column="1" FontSize="18" />
        <TextBox x:Name="TextBoxDivision"   Grid.Row="2" Margin="0,0,0,5" Grid.Column="3" FontSize="18" />
        <TextBox x:Name="TextBoxProject"   Grid.Row="3" Margin="0,0,0,5" Grid.Column="1" FontSize="18" />
        <TextBox x:Name="TextBoxName"   Grid.Row="6" Margin="0,0,0,5" Grid.Column="1" FontSize="18" />
        <TextBox x:Name="TextBoxSurname"   Grid.Row="6" Margin="0,0,0,5" Grid.Column="3" FontSize="18" />
        <TextBox x:Name="TextBoxPatronymic"   Grid.Row="6" Margin="0,0,0,5" Grid.Column="5" FontSize="18" />
        <TextBox x:Name="TextBoxSex"   Grid.Row="7" Margin="0,0,0,5" Grid.Column="1" FontSize="18" />
        <TextBox x:Name="TextBoxDateOfBirth"   Grid.Row="7" Margin="0,0,0,5" Grid.Column="3" FontSize="18" />
        <TextBox x:Name="TextBoxPhone"   Grid.Row="8"  Margin="0,0,0,5" Grid.Column="1" FontSize="18" />
        <TextBox x:Name="TextBoxEmail"   Grid.Row="8" Margin="0,0,0,5" Grid.Column="3" FontSize="18" />
        <TextBox x:Name="TextBoxContactInformation"   Grid.Row="9" Grid.ColumnSpan="3" Grid.Column="1" FontSize="18" Margin="0,0,0,5" />
        <TextBox x:Name="TextBoxCountry"   Grid.Row="10" Margin="0,0,0,5" Grid.Column="1" FontSize="18" />
        <TextBox x:Name="TextBoxCity"   Grid.Row="10" Margin="0,0,0,5" Grid.Column="3" FontSize="18" />
        <TextBox x:Name="TextBoxStreet"   Grid.Row="10"  Margin="0,0,0,5" Grid.Column="5" FontSize="18" />
