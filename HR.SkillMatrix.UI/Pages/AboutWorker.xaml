        <TextBlock Grid.Row="4" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Навыки" VerticalAlignment="Top" Margin="20,0,0,0" FontSize="18" />
        <TextBlock Grid.Row="5" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Опыт" VerticalAlignment="Top"  Margin="20,0,0,0" FontSize="18"/>
        <TextBlock Grid.Row="6" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Имя" VerticalAlignment="Top"  Margin="20,0,0,0" Grid.RowSpan="2" FontSize="18"/>
        <TextBlock Grid.Row="6" Grid.Column="2" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Фамилия" VerticalAlignment="Top"   Margin="20,0,0,0" Grid.RowSpan="2" FontSize="18"/>
        <TextBlock Grid.Row="6" Grid.Column="4" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Отчество" VerticalAlignment="Top"   Margin="20,0,0,0" Grid.RowSpan="2" FontSize="18"/>
        <TextBlock Grid.Row="7" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Пол" VerticalAlignment="Top"   Margin="20,0,0,0" Grid.RowSpan="2" FontSize="18"/>
        <TextBlock Grid.Row="7" Grid.Column="2" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Дата рождения" VerticalAlignment="Top"   Margin="20,0,0,0" FontSize="18" Width="140"/>
        <TextBlock Grid.Row="8" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Телефон" VerticalAlignment="Top"    Margin="20,0,0,0" FontSize="18"/>
        <TextBlock Grid.Row="8" Grid.Column="2" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Почта" VerticalAlignment="Top"    Margin="20,0,0,0" FontSize="18"/>
        <TextBlock Grid.Row="9" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Дополнительные контакты" VerticalAlignment="Top"    Margin="20,0,0,0" FontSize="18"/>
        <TextBlock Grid.Row="10" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Страна" VerticalAlignment="Top"    Margin="20,0,0,0" FontSize="18"/>
        <TextBlock Grid.Row="10" Grid.Column="2" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Город" VerticalAlignment="Top"    Margin="20,0,0,0" FontSize="18"/>
        <TextBlock Grid.Row="10" Grid.Column="4" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Улица" VerticalAlignment="Top"    Margin="20,0,0,0" FontSize="18"/>
        <TextBlock Grid.Row="11" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Номер дома" VerticalAlignment="Top"    Margin="20,0,0,0" FontSize="18"/>
        <TextBlock Grid.Row="11" Grid.Column="2" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Номер квартиры" VerticalAlignment="Top"    Margin="20,0,0,0" FontSize="18" Grid.RowSpan="2" Width="150"/>
