<Page x:Class="HR.SkillMatrix.UI.Pages.CreateNewPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HR.SkillMatrix.UI.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CreateNewPage">

    <Grid Background="White">
        <Label Content="Создать новое" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Top" FontSize="20"/>
        <Button x:Name="AddNewWorker" Content="Создать работника" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Center" Width="200" Height="50" Click="AddNewWorker_Click"/>
        <Button x:Name="AddNewCompany" Content="Создать компанию" HorizontalAlignment="Center" Margin="300,255,300,145" VerticalAlignment="Center" Width="200" Height="50" Click="AddNewCompany_Click"/>
        <Button Content="Создать отдел" HorizontalAlignment="Center" Margin="300,145,300,255" VerticalAlignment="Center" Width="200" Height="50"/>
        <Button x:Name="Back" Content="Назад" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Height="50" Margin="10,10,0,0" Click="Back_Click"/>
    </Grid>
</Page>
