<Page x:Class="HR.SkillMatrix.UI.Pages.AddNewCompany"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HR.SkillMatrix.UI.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddNew_Company" Width="664" Height="527" MinHeight="527" MinWidth="664">
    <Grid>
        <Grid Margin="28,100,28,50">
            <Grid.RowDefinitions>
                <RowDefinition Height="39*"/>
                <RowDefinition Height="64*"/>
                <RowDefinition Height="61*"/>
                <RowDefinition Height="62*"/>
                <RowDefinition Height="151*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="102"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Название" VerticalAlignment="Top" Foreground="White" Height="39" Width="102"/>
            <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Номер" VerticalAlignment="Top" Foreground="White" Height="80" Width="102" Grid.Row="1" Grid.RowSpan="2"/>
            <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Локация" VerticalAlignment="Top" Foreground="White" Height="75" Width="102" Grid.Row="2" Grid.RowSpan="2"/>
            <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Направление" VerticalAlignment="Top" Foreground="White" Height="75" Width="102" Grid.Row="3" Margin="0,1,0,0" Grid.RowSpan="2"/>
            <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Описание" VerticalAlignment="Top" Foreground="White" Height="75" Width="102" Grid.Row="4"/>
            <TextBox x:Name="textBoxName" Grid.Column="1" HorizontalAlignment="Left" Height="39" Margin="10,0,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="496"/>
            <TextBox x:Name="textBoxPhone" Grid.Column="1" HorizontalAlignment="Left" Height="39" Margin="10,10,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="300" Grid.Row="1"/>
            <TextBox x:Name="textBoxLocation" Grid.Column="1" HorizontalAlignment="Left" Height="39" Margin="10,2,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="300" Grid.Row="2"/>
            <TextBox x:Name="textBoxDirection" Grid.Column="1" HorizontalAlignment="Left" Height="39" Margin="10,10,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="300" Grid.Row="3"/>
            <TextBox x:Name="textBoxDescription" Grid.Column="1" HorizontalAlignment="Left" Height="151" Margin="10,0,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="496" Grid.Row="4"/>
            <Button x:Name="CreateLocation" Content="добавить" Grid.Column="1" HorizontalAlignment="Left" Margin="333,7,0,0" Grid.Row="2" VerticalAlignment="Top" Height="30" Width="97" Click="CreateLocation_Click"/>
        </Grid>
        <Grid HorizontalAlignment="Left" Height="50" VerticalAlignment="Top" Width="600" Margin="28,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button x:Name="Back" Content="Назад" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Height="50" Click="Back_Click"/>
            <Button x:Name="Save" Content="Сохранить" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center" Width="150" Height="50" Grid.ColumnSpan="2" Margin="5,0,0,0" Click="Save_Click"/>
        </Grid>
    </Grid>
</Page>
