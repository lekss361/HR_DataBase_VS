<Page x:Class="HR.SkillMatrix.UI.Pages.MainMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HR.SkillMatrix.UI.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainMenu">

    <Grid Background="White">
        <Button x:Name="SearchEmploy" Content="Поиск сотрудника" HorizontalAlignment="Center" Margin="0,80,0,0" VerticalAlignment="Top" Height="50" Width="120" Click="SearchEmploy_Click" />
        <Button x:Name="Create" Content="Создать..." HorizontalAlignment="Center" Margin="0,131,0,0" VerticalAlignment="Top" Height="50" Width="120" Click="Create_Click" />
        <Button x:Name="Statistic" Content="Статистика?" HorizontalAlignment="Center" Margin="0,182,0,0" VerticalAlignment="Top" Height="50" Width="120" />
        <Button x:Name="Companies" Content="Компании" HorizontalAlignment="Center" Margin="0,233,0,0" VerticalAlignment="Top" Height="50" Width="120" Click="Companies_Click" />
        <Button x:Name="Departments" Content="Отделы" HorizontalAlignment="Center" Margin="0,284,0,0" VerticalAlignment="Top" Height="50" Width="120" />

    </Grid>
</Page>
