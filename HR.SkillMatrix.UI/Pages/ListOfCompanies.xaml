<Page x:Class="HR.SkillMatrix.UI.Pages.ListOfCompanies"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HR.SkillMatrix.UI.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ListOfCompanies">

    <Grid Margin="0,0,0,0">
        <Grid HorizontalAlignment="Center" Height="450" VerticalAlignment="Center" Width="1047" Background="White">
            <DataGrid x:Name="Companies" AutoGenerateColumns="False"  Margin="157,58,153,99">
                <DataGrid.Columns>
                    <DataGridCheckBoxColumn></DataGridCheckBoxColumn>
                    <DataGridTextColumn Binding ="{Binding Path = Name}"  IsReadOnly="True" Header="Название Компании" Width="150" />
                    <DataGridTextColumn Binding ="{Binding Path = Information}"  IsReadOnly="True" Header="Информация" Width="100"/>
                    <DataGridTextColumn Binding ="{Binding Path = Contact}"  IsReadOnly="True" Header="Контакты" Width="100"/>
                    <DataGridTextColumn Binding ="{Binding Path = Location}" IsReadOnly="True" Header="Место нахождения" Width="200"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

    </Grid>
</Page>
